<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--  CSS Link -->
    <link href="~/css/StoreKeeper/nav.css" rel="stylesheet" />
    <link href="~/LinkedCss/Maneger/MainManeger.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Notification/toastr.css" rel="stylesheet" />
    <!--========== BOX ICONS ==========-->
    <link href='https://cdn.jsdelivr.net/npm/boxicons@2.0.5/css/boxicons.min.css' rel='stylesheet'>


    <title>manger</title>
</head>

<body onload="getCountry();">
    <form id="WebGridForm">
        <header style="background-color: #90AAB9 ">
            <div class="container mb-2 ">
                <nav class="navbar navbar-expand-lg navbar-dark pl-0" style="background-color: transparent">
                    <div class="container-fluid">
                        <div>
                            @if (string.IsNullOrEmpty(Program.CurrentUser.Image))
                            {
                                <img src="~/img/user.jpg" alt="logo" style=" width: 4rem; border-radius: 50%; height: 4rem;" class="img-fluid pr-1 pl-1">
                            }
                            else
                            {
                                <img src="@Program.CurrentUser.Image" alt="logo" style=" width: 4rem; border-radius: 50%; height: 4rem;"  class="img-fluid pr-1 pl-1">
                            }
                            <a class="navbar-brand " href="#"><span class="font-weight-bold fs-4" style="color: #d7dddd">@Program.CurrentUser.Name</span></a>
                        </div>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 text-right" style="font-size:29px; color:aliceblue !important   ">
                               
                                <li class="nav-item">
                                    <a class="nav-link  " aria-current="page" asp-area="" asp-controller="SuperVisor" asp-action="DisplayRoom">الغرف</a>
                                </li>

                            </ul>
                            <div class="nav__icons pl-2">
                                <a href="#" data-toggle="modal" data-target="#modalTarget" style="color:white;" class="nav__icon pr-1"><i class='bx bxs-user' style="font-size: 29px;"></i></a>

                                <div class="modal fade" id="modalTarget" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content" style="background-color: lightgray  !important;">
                                            <div class="modal-header" style="display:block;">
                                                <h5 class="modal-title " id="exampleModalLabel">تسجيل خروج</h5>
                                                <button type="button" class="close" data-dismiss="modal"  aria-label="Close">
                                                </button>
                                            </div>
                                            <div class="modal-body text-right">
                                                هل تريد تسجيل الخروج
                                            </div>
                                            <div class="modal-footer" style="justify-content:space-around;">
                                                <button asp-controller="Home" asp-action="WelcomeBtnClick" type="submit" class="button-2" style="width:200px">نعم</button>
                                                <button type="button" class="button-2" data-dismiss="modal" style="width:200px">لا</button>
                                            </div>


                                        </div>
                                    </div>
                                </div>

                                <a class="nav__icon" style="color:white;" asp-action="HomeBtn" asp-controller="SuperVisor"><i class='bx bxs-home' style="font-size: 29px;"></i></a>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </header>

    </form>
    <div class="container" style="overflow:inherit;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/SuperVisoir/SelectDefaultValue.js"></script>
</body>
</html>
